@using Microsoft.AspNetCore.Identity
@using MVC.Areas.Identity.Data
@inject SignInManager<PRPCUser> SignInManager
@inject UserManager<PRPCUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar navbar-nav navbar-right">

        <li class="nav-item active">
                        <a class="nav-link dropdown-toggle" href="#" id="navdrop" role="button" data-toggle="dropdown" data-hover="dropdown">Select an Operator</a>
                        <div class="dropdown-menu" aria-labelledby="navdrop">
                            <a class="nav-link" asp-area="Identity" asp-page="/Home/About">City of Amarillo</a>
                            <a class="nav-link" asp-area="identity" asp-page="/Home/Contact">WTAMU</a>
                        </div>
        <li class="nav-item active">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li class="nav-item active">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}